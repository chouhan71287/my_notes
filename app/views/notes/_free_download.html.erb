If download not started then <%= link_to "click here", download_url, :class=>"downloading_notes_from_url" %>

<script>
 $(document).ready(function(){
 	window.open($(".downloading_notes_from_url").attr("href"));
 	$(".downloading_notes_from_url").on("click",function(){
		$(".modal-body").empty();
		$('#download_modal').modal('hide')
 	});
 });
</script>